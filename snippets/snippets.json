            "#ifndef ${TM_FILENAME/([\\.-]*)([^\\.^-]*)/${1:+_}${2:/upcase}/g}",
            "# define ${TM_FILENAME/([\\.-]*)([^\\.^-]*)/${1:+_}${2:/upcase}/g}",
            "\n$0\n",
            "#endif"
        ],
        "description": "ifndef C preprocesor body"
